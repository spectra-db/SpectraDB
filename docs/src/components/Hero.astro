---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<section class="hero-section">
  <div class="hero-content">
    <div class="hero-badge">
      <span class="badge">Open Source</span>
      <span class="badge">Rust-Powered</span>
      <span class="badge emerald">v0.28</span>
    </div>
    <h1 class="hero-tagline">The AI-Native<br/>Bitemporal Ledger Database</h1>
    <p class="hero-subtitle">
      Append-only immutable storage with MVCC snapshot reads, SQL query surface,
      LSM-tree engine, and embedded AI runtime. Every write is a fact. Every fact has a timeline.
    </p>
    <div class="hero-stats">
      <div class="hero-stat">
        <span class="hero-stat-number" data-target="276">0</span>
        <span class="hero-stat-unit">ns</span>
        <span class="hero-stat-label">Point Reads</span>
      </div>
      <div class="hero-stat">
        <span class="hero-stat-number" data-target="1.9">0</span>
        <span class="hero-stat-unit">µs</span>
        <span class="hero-stat-label">Point Writes</span>
      </div>
      <div class="hero-stat">
        <span class="hero-stat-number" data-target="4">0</span>
        <span class="hero-stat-unit">×</span>
        <span class="hero-stat-label">Faster than SQLite reads</span>
      </div>
      <div class="hero-stat">
        <span class="hero-stat-number" data-target="20">0</span>
        <span class="hero-stat-unit">×</span>
        <span class="hero-stat-label">Faster than SQLite writes</span>
      </div>
    </div>
    <div class="hero-cta">
      <a href={`${base}/getting-started/quickstart/`} class="hero-btn primary">Get Started</a>
      <a href={`${base}/sql/`} class="hero-btn secondary">SQL Reference</a>
      <a href={`${base}/performance/benchmarks/`} class="hero-btn secondary">Benchmarks</a>
    </div>
  </div>
</section>

<script>
  function animateCounters() {
    const counters = document.querySelectorAll('.hero-stat-number[data-target]');
    counters.forEach(counter => {
      const target = parseFloat(counter.getAttribute('data-target') || '0');
      const isFloat = target % 1 !== 0;
      const duration = 1200;
      const start = performance.now();

      function step(now: number) {
        const elapsed = now - start;
        const progress = Math.min(elapsed / duration, 1);
        const ease = 1 - Math.pow(1 - progress, 3);
        const current = target * ease;
        counter.textContent = isFloat ? current.toFixed(1) : Math.round(current).toString();
        if (progress < 1) requestAnimationFrame(step);
      }
      requestAnimationFrame(step);
    });
  }

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        animateCounters();
        observer.disconnect();
      }
    });
  }, { threshold: 0.3 });

  const heroSection = document.querySelector('.hero-section');
  if (heroSection) observer.observe(heroSection);
</script>

<style>
  .hero-content {
    max-width: 800px;
    text-align: center;
    padding: 2rem;
  }
  .hero-badge {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--spectra-text-muted);
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  .hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
  }
  .hero-stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    display: inline;
  }
  .hero-stat-unit {
    font-size: 1.5rem;
    font-weight: 500;
    opacity: 0.7;
    display: inline;
  }
  .hero-stat-number, .hero-stat-unit {
    color: var(--sl-color-white);
  }
  :global([data-theme='light']) .hero-stat-number,
  :global([data-theme='light']) .hero-stat-unit {
    color: #0f172a;
  }
  .hero-stat-label {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--spectra-text-muted);
    margin-top: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .hero-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .hero-btn.primary {
    background: var(--spectra-gradient);
    color: #ffffff;
  }
  .hero-btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--spectra-glow);
  }
  .hero-btn.secondary {
    background: var(--spectra-card-bg);
    color: var(--spectra-text);
    border: 1px solid var(--spectra-card-border);
  }
  .hero-btn.secondary:hover {
    border-color: var(--spectra-blue);
    transform: translateY(-2px);
  }
  @media (max-width: 480px) {
    .hero-subtitle { font-size: 1rem; }
    .hero-stat-number { font-size: 2rem; }
    .hero-stat-unit { font-size: 1.2rem; }
  }
</style>
