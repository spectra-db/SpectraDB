---
interface Props {
  title: string;
  description: string;
  href?: string;
}

const { title, description, href } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const resolvedHref = href && href.startsWith('/') ? `${base}${href}` : href;
---

<a class="feature-card" href={resolvedHref}>
  <h3 class="feature-card-title">{title}</h3>
  <p class="feature-card-description">{description}</p>
  <span class="feature-card-link">Learn more â†’</span>
</a>

<style>
  .feature-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    background: var(--tensor-card-bg);
    border: 1px solid var(--tensor-card-border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .feature-card:hover {
    border-color: var(--tensor-blue);
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.12);
  }
  .feature-card-title {
    font-size: 1.05rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--tensor-text);
  }
  .feature-card-description {
    font-size: 0.88rem;
    color: var(--tensor-text-muted);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  .feature-card-link {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.82rem;
    font-weight: 600;
    color: var(--tensor-blue);
  }
  .feature-card:hover .feature-card-link {
    color: var(--tensor-violet);
  }
</style>
