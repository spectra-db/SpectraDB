---
interface Props {
  icon: string;
  title: string;
  description: string;
  href?: string;
}

const { icon, title, description, href } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const resolvedHref = href && href.startsWith('/') ? `${base}${href}` : href;
const Tag = href ? 'a' : 'div';
---

<Tag class="feature-card" href={resolvedHref}>
  <div class="feature-card-icon">{icon}</div>
  <h3 class="feature-card-title">{title}</h3>
  <p class="feature-card-description">{description}</p>
  {href && <span class="feature-card-link">Learn more â†’</span>}
</Tag>

<style>
  .feature-card {
    text-decoration: none;
    color: inherit;
    display: block;
    background: var(--spectra-card-bg);
    border: 1px solid var(--spectra-card-border);
    border-radius: 16px;
    padding: 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }
  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.3);
  }
  .feature-card-icon {
    width: 48px;
    height: 48px;
    background: var(--spectra-gradient);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }
  .feature-card-title {
    font-size: 1.15rem;
    font-weight: 600;
    margin: 1rem 0 0.5rem;
    color: var(--spectra-text);
  }
  .feature-card-description {
    font-size: 0.9rem;
    color: var(--spectra-text-muted);
    line-height: 1.6;
    margin: 0;
  }
  .feature-card-link {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--spectra-blue);
    transition: color 0.2s;
  }
  .feature-card:hover .feature-card-link {
    color: var(--spectra-violet);
  }
</style>
